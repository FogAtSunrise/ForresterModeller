        xmlns:local="clr-namespace:WPFtest1"
        mc:Ignorable="d"
        Title="Моделлер" Height="450" Width="800">
    <Grid>
        

        <Menu Height="19" VerticalAlignment="Top" Margin="0,0,-0.4,0">
