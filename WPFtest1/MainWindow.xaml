            </MenuItem>
            <MenuItem Header="Справка">
               
            </MenuItem>
        </Menu>

        <TabControl  Margin="0,215,219.6,0" SelectionChanged="TabControl_SelectionChanged">
            
            <TabItem >
                <TabItem.Header>
                    
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3">Потоки</TextBlock>
                    </StackPanel>
                    
                </TabItem.Header>
                
                <TabItem.Content>
                    <StackPanel>
                        <Button Margin="0,0,336.8,0" >информация</Button>
                        <Button Margin="0,0,336.8,0">материал</Button>
                        <Button Margin="0,0,336.8,0">заказы</Button>
                    </StackPanel>
                </TabItem.Content>
                
            </TabItem>
            
            <TabItem >
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3">Другое</TextBlock>
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <StackPanel>
                        <Button Margin="0,0,336.8,0" >исток</Button>
                        <Button Margin="0,0,336.8,0">сток</Button>
                        <Button Margin="0,0,336.8,0">константа</Button>
                        <Button Margin="0,0,336.8,0">вспомогательная переменная</Button>
                        <Button Margin="0,0,336.8,0">переменная на другойдиаграмме</Button>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <TabItem >
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3">Уровни</TextBlock>
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <StackPanel>
                        <Button Margin="0,0,336.8,0" >запаздывание</Button>
                        <Button Margin="0,0,336.8,0">уровень</Button>
                       
                    </StackPanel>
                </TabItem.Content>
            </TabItem>
            <TabItem >
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3">Функции</TextBlock>
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <StackPanel>
                        <Button Margin="0,0,336.8,0" >функция принятия решения</Button>

                    </StackPanel>
                </TabItem.Content>
            </TabItem>
        </TabControl>
        
        <TabControl  Margin="520,19,-0.4,242" SelectionChanged="TabControl_SelectionChanged">

            <TabItem >
                <TabItem.Header>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3" Width="120"><Run Text="Файловый менеджер"/></TextBlock>
                    </StackPanel>

                </TabItem.Header>

                <StackPanel>
                    <Button Margin="0,0,183.6,0" Content="информация" />
                    <Button Margin="0,0,183.6,0" Content="материал"/>
                    <Button Margin="0,0,183.6,0" Content="заказы"/>
                </StackPanel>

            </TabItem>

            <TabItem >
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3"><Run Text="Другое"/></TextBlock>
                    </StackPanel>
                </TabItem.Header>

                <StackPanel>
                    <Button Margin="0,0,336.8,0" Content="исток" />
                    <Button Margin="0,0,336.8,0" Content="сток"/>
                    <Button Margin="0,0,336.8,0" Content="константа"/>
