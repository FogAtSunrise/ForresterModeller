                <TabItem.Header>
                    <StackPanel Orientation="Horizontal"/>
                </TabItem.Header>

                <StackPanel>
                    <Button Margin="0,0,336.8,0" Content="функция принятия решения" />

                </StackPanel>
            </TabItem>
